<Window x:Class="SuperMain.MyForms.ChangeProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuperMain.MyForms"
        mc:Ignorable="d"
        FontFamily="comic Sans ms"
        Title="ChangeProductWindow" MinHeight="450" MinWidth="800">
    <Grid>
        <StackPanel Margin="5,5,5,10">
            <Label Margin="5" HorizontalAlignment="Center" FontSize="20">
                Ведите артикуль продукта, которого вы хотите изменить:
            </Label>
            <TextBox Margin="5" Name="tbArticul" Width="650" FontSize="50"></TextBox>
            <Button Margin="5" Name="btnOpenChange" Click="btnOpenChange_Click" FontSize="25" Width="450">Открыть окно изменения</Button>
        </StackPanel>
    </Grid>
</Window>
