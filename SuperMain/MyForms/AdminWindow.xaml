<Window x:Class="SuperMain.MyForms.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuperMain.MyForms"
        mc:Ignorable="d"
        FontFamily="comic Sans ms"
        Title="AdminWindow" MinHeight="450" MinWidth="800">
    <Grid>
        <StackPanel Margin="5" HorizontalAlignment="Right" VerticalAlignment="Top">
            <TextBlock Margin="5" Name="tbUserName"></TextBlock>
        </StackPanel>
        <StackPanel Margin="5">
            <Label Margin="5">
                Операции с продуктами:
            </Label>
            <Button Margin="5" Name="btnCheckListProduct" Click="btnCheckListProduct_Click">Посмотреть список продуктов</Button>
            <Button Margin="5" Name="btnAddProduct" Click="btnAddProduct_Click">Добавить продукт</Button>
            <Button Margin="5" Name="btnDelProduct" Click="btnDelProduct_Click">Удалить продукт</Button>
            <Button Margin="5" Name="btnChanProduct" Click="btnChanProduct_Click">Изменить продукт</Button>
        </StackPanel>
    </Grid>
</Window>
