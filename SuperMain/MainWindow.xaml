<Window x:Class="SuperMain.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuperMain"
        mc:Ignorable="d"
        FontFamily="comic Sans mc"
        Title="MainWindow" MinHeight="450" MinWidth="800">
    <Grid>
        <StackPanel Margin="5">
            <Label Margin="5">
                Ведите логин:
            </Label>
            <TextBox Margin="5" Name="tbLogin"></TextBox>
            <Label Margin="5">
                Ведите пароль:
            </Label>
            <PasswordBox Margin="5" Name="pbPassword"></PasswordBox>
            <Button Margin="5" Name="btnGo" Click="btnGo_Click">
                Войти
            </Button>
            <Button Margin="5" Name="btnGoGuest" Click="btnGoGuest_Click">
                Войти как гость
            </Button>
        </StackPanel>
    </Grid>
</Window>
